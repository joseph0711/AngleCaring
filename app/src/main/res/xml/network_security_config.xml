<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration for development environment - allowing HTTP traffic -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic to localhost and 10.0.2.2 (emulator's localhost) -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>

        <!-- Add your development server domain here if needed -->
        <!-- <domain includeSubdomains="true">example.com</domain> -->
    </domain-config>

    <!-- Configuration for Azure production environment - HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Azure App Service domain -->
        <domain includeSubdomains="true">angle-caring-api.azurewebsites.net</domain>
        <domain includeSubdomains="true">azurewebsites.net</domain>
    </domain-config>
    
    <!-- Default configuration for all other domains - HTTPS only -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config> 