<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AngleCaring" parent="android:Theme.Material.Light.NoActionBar">
        <!-- 主要顏色 -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="android:colorAccent">@color/secondary_green</item>
        
        <!-- 背景顏色 -->
        <item name="android:colorBackground">@color/background_light</item>
        
        <!-- 文字顏色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- 狀態欄 -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- 導航欄 -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>